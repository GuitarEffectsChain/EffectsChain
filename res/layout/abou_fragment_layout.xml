<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 	<TextView 
 	    android:id="@+id/lbl_titleAbout"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_gravity="center"
 	    android:gravity="center"
 	    android:text="@string/app_name"
 	    android:textSize="30dp"
 	    android:layout_marginTop="20dp"/>
 	
 	 	<TextView 
 	    android:id="@+id/lbl_infoAbout"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_gravity="center"
 	    android:gravity="center"
 	    android:text="Versión: 1.0 \n Actualizada a dia 1/06/2015 \n Esta aplicación pertenece al conjunto EffectsChain, el cual agrupa a los dos dispositivos (PC y Android) \n \n Desarrollador Android: Carlos Romero \n Desarrollador PC: Dani Muñoz"
 	    android:textSize="18dp"
 	    android:layout_marginTop="10dp"/>
 	 	
 	 	<Button 
 	 	    android:id="@+id/btn_tuto"
 	 	    android:layout_height="wrap_content"
 	 	    android:layout_width="match_parent"
 	 	    android:text="¿Como funciona?"
 	 	    android:layout_marginTop="20dp"
 	 	    android:layout_marginLeft="10dp"
 	 	    android:layout_marginRight="10dp"/>
 	
</LinearLayout>
