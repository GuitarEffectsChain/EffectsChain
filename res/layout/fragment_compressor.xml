<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
       <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
                 
       
	<TextView 
    android:id="@+id/text1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="   COMPRESSOR"
    android:textColor="@android:color/white"
    android:background="@android:color/background_dark"
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_marginBottom="6dp"/>
	
	<ToggleButton 
	    android:id="@+id/toggle_comp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textOn="On"
	    android:textOff="Off"
	    android:layout_alignParentRight="true"/>
	
	</RelativeLayout>
	
	
	<RelativeLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp">
	
	<TextView 
    android:id="@+id/text_atttack_c"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="Attack"/>
	
	<TextView 
    android:id="@+id/value_attack_comp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    android:layout_alignParentRight="true"
    android:textStyle="bold"
    android:text="0%"/>
	
	</RelativeLayout>
	
	<SeekBar 
	    android:id="@+id/seekattack_comp"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"	
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp" 
	    android:thumb="@drawable/yellow_scrubber_control"
	    android:progressDrawable="@drawable/yellow_scrubber_progress"/>
	
	
	<RelativeLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp">

	<TextView 
    android:id="@+id/text_decayd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="Decay"/>
	
	<TextView 
    android:id="@+id/value_decay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:layout_alignParentRight="true"
    android:text="0%"/>
	</RelativeLayout>
	
	<SeekBar 
	    android:id="@+id/seekDecay"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp"
	    android:thumb="@drawable/yellow_scrubber_control"
	    android:progressDrawable="@drawable/yellow_scrubber_progress"	 />
	
	
	<RelativeLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp">
	
	<TextView 
    android:id="@+id/text_ratio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="Ratio"/>
	
	<TextView 
    android:id="@+id/value_Ratio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:textStyle="bold"
    android:text="0%"/>
	
	</RelativeLayout>
	
	<SeekBar 
	    android:id="@+id/seekRatio"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp"
	    android:thumb="@drawable/yellow_scrubber_control"
	    android:progressDrawable="@drawable/yellow_scrubber_progress"/>
	
	<RelativeLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp">
	    
	<TextView 
    android:id="@+id/text_thresh_c"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="Threshold"/>
		
	<TextView 
    android:id="@+id/value_thresh_comp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:layout_alignParentRight="true"
    android:text="0%"/>
		    
	</RelativeLayout>
	
	<SeekBar 
	    android:id="@+id/seekthresh_comp"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp"
	    android:thumb="@drawable/yellow_scrubber_control"
	    android:progressDrawable="@drawable/yellow_scrubber_progress"	 />
    	    
	
</LinearLayout>
</ScrollView>