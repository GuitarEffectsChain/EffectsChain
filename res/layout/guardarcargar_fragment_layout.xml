<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#FF2F3237">
        
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#FF2F3237"
            android:orientation="vertical">
    
    <TextView 
        android:id="@+id/lbl_cargartitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Exportar Preset"
        android:textColor="#FFE6B3"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

     <TextView 
        android:id="@+id/lbl_exportsub"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Selecciona un preset de tu lista para exportar un archivo este archivo se guardara en la carpeta indicada"
        android:textColor="#FFE6B3"
        android:textSize="18dp"
        android:layout_marginTop="15dp" 
        android:layout_margin="10dp"/>
     
     <Button 
         android:id="@+id/btn_export"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="#FFE6B3"
         android:background="#FF4A535C"
         android:text="Exportar"          
         android:layout_margin="10dp"
         />
     
         <LinearLayout 
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"></LinearLayout>
    <TextView 
        android:id="@+id/lbl_imtitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Importar Preset"
        android:textColor="#FFE6B3"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

     <TextView 
        android:id="@+id/lbl_importsub"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Selecciona un archivo de la carpeta para importarlo en la aplicacion"
        android:textColor="#FFE6B3"
        android:textSize="18dp"
        android:layout_marginTop="15dp" 
        android:layout_margin="10dp"/>
     
     <Button 
         android:id="@+id/btn_import"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="#FFE6B3"
         android:background="#FF4A535C"
         android:text="Importar"          
         android:layout_margin="10dp"
         />
     </LinearLayout>
</ScrollView>